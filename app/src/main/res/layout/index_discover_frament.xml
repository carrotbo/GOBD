<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 标题 -->

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_click_back_color"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/back" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/lightblack"
            android:textSize="18dp"
            android:text="发现"/>

        <TextView
            android:id="@+id/img_search"
            style="@style/help_layout"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="搜索"
            android:textColor="@color/blue" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off_rule_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:indicator_height="8dp"
        app:indicator_width="8dp"
        app:indicator_drawable_selected="@drawable/point_blue"
        app:indicator_drawable_unselected="@drawable/point_while"

        />
        <TextView
            android:id="@+id/tv_num"
            android:text="5dp"
            style="@style/content_layout"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/banner"
            android:visibility="gone"
            android:layout_margin="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <!--故障码-->
        <RelativeLayout
            android:id="@+id/re_fault_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_back_color">

            <ImageView
                android:id="@+id/img_chaiche"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/index_upkeep"
                android:textSize="14sp" />

        </RelativeLayout>
        <!--专业问答-->
        <RelativeLayout
            android:id="@+id/re_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_back_color">

            <ImageView
                android:id="@+id/img_note"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/index_vip" />

        </RelativeLayout>
        <!--求职招聘-->
        <RelativeLayout
            android:id="@+id/re_recruit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_back_color">

            <ImageView
                android:id="@+id/img_second"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/index_epc" />


        </RelativeLayout>
        <!--汽修笔记-->
        <RelativeLayout
            android:id="@+id/re_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_back_color">

            <ImageView
                android:id="@+id/img_integral_shop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/index_maijor_repair" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_fitting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_click_back_color">

            <ImageView
                android:id="@+id/img_fitting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/index_school" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/cut_off_rule_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            style="@style/title_layout"
            android:textStyle="bold"
            android:text="推荐报告"/>
        <TextView
            style="@style/title_layout"
            android:layout_alignParentRight="true"
            android:text="更多"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off_rule_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            style="@style/title_layout"
            android:textStyle="bold"
            android:text="诊断策略"/>
        <TextView
            style="@style/title_layout"
            android:layout_alignParentRight="true"
            android:text="更多"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off_rule_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            style="@style/title_layout"
            android:textStyle="bold"
            android:text="问答社区"/>
        <TextView
            style="@style/title_layout"
            android:layout_alignParentRight="true"
            android:text="更多"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off_rule_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            style="@style/title_layout"
            android:textStyle="bold"
            android:text="相关大师"/>
        <TextView
            style="@style/title_layout"
            android:layout_alignParentRight="true"
            android:text="更多"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off_rule_line"/>
</LinearLayout>
</layout>